{
  "name": "smartchallenge",
  "version": "1.0.0",
  "description": "Api server appication for smartchallenge player",
  "main": "index.js",
  "standard": {
    "ignore": [
      "**/*.spec.js"
    ],
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "scripts": {
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha --require co-mocha **/*.spec.js",
    "test-watch": "nodemon --exec \"npm test\"",
    "dev": "standard --fix && nodemon index.js",
    "start": "node index.js"
  },
  "author": "Ossaija ThankGod <codebugsolved@gmail.com> (https://github.com/princedavis)",
  "license": "ISC",
 "dependencies": {
    "dotenv": "4.0.0",
    "joi": "11.0.3",
    "koa": "2.3.0",
    "koa-bodyparser": "4.2.0",
    "koa-request-validation": "1.1.4",
    "koa-router": "7.2.1",
    "koa2-cors": "2.0.3"
  },
  "devDependencies": {
    "standard": "10.0.3"
  }
}
